<div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-4">
    <%= form_for(@article) do |f| %>
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit 'Save', data: {confirm: "Are you sure ?"} %>
  </p>
<% end %>
  </div>
  <div class="col-sm-4">
    
  </div>
</div>